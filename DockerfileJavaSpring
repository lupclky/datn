#Build
FROM maven:3.8.4-openjdk-17 AS build
WORKDIR /app
COPY Backend /app/Backend
RUN mvn package -f /app/Backend/pom.xml -Dmaven.test.skip=true

#multi-staging
FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /app/Backend/target/Sneakers-0.0.1-SNAPSHOT.jar app.jar
COPY --from=build /app/Backend/uploads uploads
COPY --from=build /app/Backend/Image_upload Image_upload

EXPOSE 8089
CMD ["java","-jar","app.jar"]


